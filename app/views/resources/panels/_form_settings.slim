#settings.modal.fade tabindex="-1"
  .modal-dialog
    .modal-content
      .modal-header
        a.close data-dismiss="modal" Ã—
        h4.modal-title Form settings
      = form_tag setting_path(id: params[:table]), method: :put, class: 'form-horizontal' do
        .modal-body
          = accordion do |accordion|
            = accordion.pane 'Form fields' do
              = render 'resources/panels/column_listing', resource: resource, type: :form, sortable: true
            = accordion.pane 'Validations' do
              = render 'resources/panels/validations'
        .modal-footer= submit_tag 'Save settings', class: 'btn btn-primary'
