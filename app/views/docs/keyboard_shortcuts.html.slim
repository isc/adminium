.modal-dialog
  .modal-content
    .modal-header
      a.close data-dismiss="modal" ×
      h4.modal-title Keyboard shortcuts
    .modal-body
      ul.keyboard-shortcuts
        li
          ' Anywhere
          ul
            li
              kbd s
              '  : focus table selection
            li
              kbd ?
              '  : open keyboard shortcut help
        li
          ' On table listing
          ul
            li
              kbd= "/"
              '  : focus search field for the current table
            li
              kbd j
              = " / "
              kbd k
              '  or 
              kbd ↓
              = " / "
              kbd ↑
              '  : move selection to next / previous row
            li
              kbd x
              '  : check selected row
            li
              kbd o
              '  or  
              kbd= "<Enter>"
              '  or  
              kbd →
              '  : show selected row
            li
              kbd e
              '  : edit selected row
            li
              kbd c
              '  : create a new row
            li
              kbd t
              '  : trash selected row
    .modal-footer
      a.btn.btn-default data-dismiss="modal" Close
