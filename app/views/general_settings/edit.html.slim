h1 General Settings

= form_tag general_settings_path, :method => :put, :class => 'form-horizontal' do
  fieldset
    legend Listing
    .control-group
      label.control-label per page
      .controls
        input type="number" value=global_settings.per_page name="settings[per_page]"
        p.help-block number of rows displayed per page by default
  fieldset
    legend Types
    .control-group
      label.control-label DateTime format
      .controls
        - d = Time.now
        - formats = [:long, :default, :short]
        select name='settings[datetime_format]'
          = options_for_select(formats.map{|f|[l(d, :format => f),f.to_s]}, global_settings.datetime_format)
      label.control-label Date
      .controls
        - d = Date.today
        - formats = [:long, :default, :short]
        select name='settings[date_format]'
          = options_for_select(formats.map{|f|[l(d, :format => f),f.to_s]}, global_settings.date_format)
  .form-actions
    input.btn.btn-primary type="submit" value="Save Changes"
    '
    a.btn Cancel